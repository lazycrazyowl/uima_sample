<typeSystemDescription  xmlns="http://uima.apache.org/resourceSpecifier">
	<name>TutorialTypeSystem</name>
	<description>Type System Definition for the tutorial examples - as of Exercise 1</description>
	<vendor>The Apache Software Foundation</vendor>
	<version>1.0</version>
	<types>

		<typeDescription>
			<name>edu.ucdenver.ccp.simple_uima_example.Protein</name>
			<description></description>
			<supertypeName>uima.tcas.Annotation</supertypeName>
			<features>
				<featureDescription>
					<name>prefix</name>
					<description>The prefix part of the name</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
				<featureDescription>
					<name>suffix</name>
					<description>The suffix part of the name</description>
					<rangeTypeName>uima.cas.String</rangeTypeName>
				</featureDescription>
			</features>
		</typeDescription>

		<!-- Sentence and Token are basically the same as what OpenNLP-UIMA provides in it's namespace.	
			 They don't include the jcasgen'ed versions, so I put something similar here -->	
		<typeDescription>
            <name>edu.ucdenver.ccp.simple_uima_example.types.SentenceAnnotation</name>
			<supertypeName>uima.tcas.Annotation</supertypeName>
        </typeDescription>

		<typeDescription>
            <name>edu.ucdenver.ccp.simple_uima_example.types.TokenAnnotation</name>
            <supertypeName>uima.tcas.Annotation
            </supertypeName>
            <features>
                <featureDescription>
                    <name>pos</name>
                    <description>Part of speech</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

	</types>
</typeSystemDescription>
